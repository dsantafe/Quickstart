<h1>Blogs</h1>

<select id="ddlBlogs" name="ddlBlogs" class="form-control"></select>
<hr />

<div id="graph" style="height: 150px;width:150px"></div>
<hr />

<button type="button" class="btn btn-primary" id="create">New</button>

<div id="rowBlogs">
    <div id="divBlogs" class="table-responsive">
        <table id="tableBlogs" class="table table-bordered" style="width: 100%"></table>
    </div>
</div>

<div id="modalBlogs" class="modal fade" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalBlogs" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Blogs</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Views/Blogs/Index.js?@DateTime.UtcNow.ToString("yyyyyMMdd")"></script>

<script>
    Morris.Donut({
      element: 'graph',
      data: [
        {value: 70, label: 'foo'},
        {value: 15, label: 'bar'},
        {value: 10, label: 'baz'},
        {value: 5, label: 'A really really long label'}
      ],
      formatter: function (x) { return x + "%"}
    }).on('click', function(i, row){
      console.log(i, row);
    });
</script>