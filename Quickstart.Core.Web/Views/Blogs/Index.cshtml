<script>
    $(document).ready(function () {
        getBlogs();
    });

    function getBlogs() {
        $.get("/Blogs/IndexJson", function (data) {
            console.table(data);

            $('#tableBlogs').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                data: data,
                columns: [
                    { title: 'Id', data: "id" },
                    { title: 'Name', data: "name" },
                    { title: 'Actions', data: null },
                ],
                columnDefs: [
                    {
                        targets: 2,
                        render: function (data, type, row) {
                            return '<a href="#">Editar</a>';
                        }
                    }
                ]
            });
        });
    }
</script>

<h1>Index</h1>

<table id="tableBlogs" class="table table-bordered" style="width:100%"></table>