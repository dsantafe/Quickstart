@model Quickstart.Core.BL.DTOs.BlogDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form id="blogEditForm">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="edit-save" class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Views/Blogs/Edit.js?@DateTime.UtcNow.ToString("yyyyyMMdd")"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
